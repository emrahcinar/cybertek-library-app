package replits;
/*
isEven method gets a number(int) if its even (2,4,8...) returns true.
if its odd return false.
for example:isEven method gets a number(int) if its even (2,4,8...) returns true.
if its odd return false.
for example:
 */

import java.util.Scanner;

class Main {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        int even = scan.nextInt();
        boolean sonuc = isEven(even);

    }

    public static boolean isEven(int n) {

        boolean result = false;
        if (n % 2 == 0) {
            result = true;
        } else {
            result = false;
        }

        return result;


    }

}